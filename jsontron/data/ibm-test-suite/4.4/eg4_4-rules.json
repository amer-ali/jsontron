    ],
    
	"pattern":[
      {
      	"id":"Report_links",
      	"title":"Report links Pattern",
      	"rule":[
          {          
              	"id":"Report_links_rule",
              	"abstract":false,
                "context": "$..*",
                "assert":[
                  {
                     "id":"Report_links_assert",
                     "test":"((jp.query(contextNode, '$..link')).length >0)",
                     "message": "element has a link."
                  }
                ]              
          }]}]}}